{
  "name": "melon-fire",
  "version": "1.0.2",
  "description": "WatermelonDB Firestore sync",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "index.ts",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@firebase/rules-unit-testing": "^1.3.15",
    "@jest/globals": "^29.3.1",
    "@nozbe/watermelondb": "^0.24.0",
    "@react-native-firebase/app": "^16.5.0",
    "@react-native-firebase/firestore": "^15.7.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/mocha": "^10.0.1",
    "firebase-admin": "^9.12.0",
    "firebase-tools": "^9.19.0",
    "jest": "^29.3.1",
    "metro-react-native-babel-preset": "^0.73.7",
    "microbundle": "^0.15.1",
    "release-it": "^15.5.1"
  },
  "peerDependencies": {
    "@nozbe/watermelondb": "^0.24.0",
    "@react-native-firebase/firestore": "^15.7.0"
  },
  "scripts": {
    "test": "firebase emulators:exec --only firestore \"jest --detectOpenHandles\"",
    "build": "microbundle --no-compress --format modern,cjs",
    "prepare": "npm run build",
    "release": "release-it"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fivecar/melon-fire.git"
  },
  "keywords": [
    "watermelondb",
    "watermelon",
    "firestore",
    "firebase",
    "sync"
