  "jest": {
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-native-firebase)/)"
    ]
  },
  "author": "Philip Su",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fivecar/melon-fire/issues"
  },
  "homepage": "https://github.com/fivecar/melon-fire#readme",
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "arrowParens": "avoid"
  }
}
